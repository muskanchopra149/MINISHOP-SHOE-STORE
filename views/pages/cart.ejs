<html lang="en">
<head>
<title>Shopping-Cart</title>
<link rel="stylesheet" href="css/cart.css">
<script src="jquery-3.6.0.min.js"></script>
<script src="script/cart.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
<main>
<h1>ShoppingCart</h1>
<div class="line"></div>
<table>
	<thead class="table-title">
		<td>Product Name</td>
		<td>Price</td>
		<td>Quantity</td>
		<td>Total</td>
		<td>Delete</td>
	</thead>
	<%cart.forEach(function(item){%>
		<tr data-number="{datanumber}">
			<td>
			<div class="smallpic"><img src="images/<%=item.image%>"></div>
			<div class="smallpic-info"><%=item.name%></div>
			</td>
			<td class="price1"><span>$</span><%=item.price%></td>
			<td>
			<div class="quantity">
				<div class="decrease"><a class="decrease2" href="javascript:;"><i
				class="bi bi-dash-lg"></i></a></div>
				<div class="number"><input type="text" value="<%=item.quantity%>"></div>
				<div class="increase"><a class="increase2" href="javascript:;"><i
				class="bi bi-plus-lg"></i></a></div>
			</div>
			</td>
			<td class="price2"><%=item.price*item.quantity%></td>
			<td>
			<form method="post" action="/remove_product">
				<input type="hidden" name="id" value="<%=item.id%>">
				<input type="submit" name="remove_btn" class="remove_btn" value="remove">
			</form>
			</td>
		</tr>
	<%})%>
</table>
<div class="total">Total :
	<div class="total-amount">$<%=total%></div>
</div>
<div class="checkout container">
	<form method="get" action="/checkout">
		<input type="submit" class="btn-btn primary" value="Checkout">
	</form>
</div>
</main>
</body>

